syntax on
filetype plugin indent on
set tabstop=4
set shiftwidth=4
set expandtab
set guifont=Iosevka\ 20
set guioptions-=m
set guioptions-=T
set noesckeys
set relativenumber
set number
set ignorecase
set smartcase
set incsearch
set autochdir
set cinoptions=l1

set t_Co=256
colorscheme retrobox
" If your colorscheme does not load perfectly, uncomment the two lines below
" highlight Normal ctermbg=NONE
" highlight nonText ctermbg=NONE
set background=dark

set mouse=a

set formatoptions-=cro

" Use this line for Linux
set clipboard=unnamedplus
" Use this line for Windows
" set clipboard=unnamed
